<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>CRUD_Project</display-name>
  
  
  <servlet>
  	<servlet-name>saveUser</servlet-name>
  	<servlet-class>com.CRUD.RegisterUser</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>saveUser</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  
    <servlet>
  	<servlet-name>editUser</servlet-name>
  	<servlet-class>com.CRUD.EditUser</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>editUser</servlet-name>
  	<url-pattern>/edit</url-pattern>
  </servlet-mapping>
  
    <servlet>
  	<servlet-name>deleteUser</servlet-name>
  	<servlet-class>com.CRUD.DeleteUser</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>deleteUser</servlet-name>
  	<url-pattern>/delete</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>loadUser</servlet-name>
  	<servlet-class>com.CRUD.LoadUser</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>loadUser</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
  
  
</web-app>